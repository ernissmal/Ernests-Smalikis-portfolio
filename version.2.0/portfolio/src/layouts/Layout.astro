---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Ernests Smalikis - Software Engineer Portfolio">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-background-light dark:bg-background-dark text-gray-900 dark:text-gray-100 min-h-screen font-sans antialiased">
		<div class="min-h-screen">
			<slot />
		</div>
		<div class="fixed inset-0 -z-10 bg-[radial-gradient(45%_35%_at_50%_35%,rgba(37,99,235,0.05),transparent)] dark:bg-[radial-gradient(45%_35%_at_50%_35%,rgba(37,99,235,0.05),transparent)]"></div>
	</body>
</html>

<style is:global>
	::selection {
		@apply bg-primary/20 text-primary-dark dark:text-primary-light;
	}
	
	html {
		@apply scroll-smooth;
	}

	body {
		@apply transition-colors duration-300;
	}
</style>
