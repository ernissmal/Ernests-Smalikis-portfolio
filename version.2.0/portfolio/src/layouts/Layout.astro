---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Ernests Smalikis - Software Engineer Portfolio">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Roboto+Mono:wght@400;500&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="/global.css">
		<title>{title}</title>
	</head>
	<body class="bg-light dark:bg-dark text-gray-900 dark:text-gray-100 min-h-screen font-sans" style="background-color: #ffffff; color: #111827; font-family: 'Inter', sans-serif; min-height: 100vh; -webkit-font-smoothing: antialiased; -moz-osx-font-smoothing: grayscale;">
		<div class="min-h-screen relative overflow-x-hidden">
			<div class="z-10 relative animate-fade-in">
				<slot />
			</div>

			<!-- Animated, Layered Gradient Background -->
			<div class="fixed inset-0 -z-10 pointer-events-none">
				<div class="absolute inset-0 gradient-bg-primary animate-gradient-flow"></div>
				<div class="absolute inset-0 gradient-bg-accent mix-blend-lighten"></div>
				<div class="absolute inset-0 bg-gradient-top" style="opacity: 0.3; mix-blend-mode: lighten;"></div>
				<div class="absolute inset-0 bg-gradient-bottom" style="opacity: 0.2; mix-blend-mode: multiply;"></div>
				<div class="absolute inset-0 bg-grid-pattern" style="opacity: 0.02;"></div>
			</div>

			<!-- Floating, Loud CTA Button -->
			<a href="/projects" class="fixed bottom-8 right-8 z-50 group" style="position: fixed; bottom: 2rem; right: 2rem; z-index: 50;">
				<button class="loud-cta animate-bounce-soft">
					<span style="display: inline-flex; align-items: center; gap: 1rem;">
						<span style="filter: drop-shadow(0 1px 2px rgba(0,0,0,0.1)); font-size: 1.875rem;">ðŸš€</span>
						<span>See My Projects</span>
					</span>
				</button>
			</a>
		</div>
	</body>
</html>

<style is:global>
	::selection {
		background-color: rgba(0, 112, 243, 0.2);
		color: #0058c6;
	}
	
	.dark ::selection {
		color: #4d9aff;
	}
	
	html {
		scroll-behavior: smooth;
	}

	body {
		transition: colors 0.3s ease;
	}

	/* Gradient text utility */
	.gradient-text {
		background-image: linear-gradient(to right, #0070f3, #ff3b30, #0070f3);
		background-size: 200% auto;
		background-clip: text;
		-webkit-background-clip: text;
		color: transparent;
		animation: gradient 15s ease infinite;
	}

	/* Custom grid pattern */
	.bg-grid-pattern {
		background-size: 50px 50px;
		background-image: 
			linear-gradient(to right, rgba(99,102,241,0.1) 1px, transparent 1px),
			linear-gradient(to bottom, rgba(99,102,241,0.1) 1px, transparent 1px);
	}

	/* Custom scrollbar */
	::-webkit-scrollbar {
		width: 0.5rem;
	}

	::-webkit-scrollbar-track {
		background-color: #ffffff;
	}
	
	.dark ::-webkit-scrollbar-track {
		background-color: #121212;
	}

	::-webkit-scrollbar-thumb {
		background-color: rgba(0, 112, 243, 0.2);
		border-radius: 9999px;
		transition: background-color 0.2s ease;
	}

	::-webkit-scrollbar-thumb:hover {
		background-color: rgba(0, 112, 243, 0.3);
	}

	/* Smooth transitions for theme switching */
	* {
		transition: background-color 0.2s ease, color 0.2s ease, border-color 0.2s ease;
	}

	/* Card and container styles */
	.glass-card {
		backdrop-filter: blur(12px);
		-webkit-backdrop-filter: blur(12px);
		background-color: rgba(255, 255, 255, 0.3);
		border: 1px solid rgba(255, 255, 255, 0.3);
		border-radius: 1rem;
		box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
	}
	
	.dark .glass-card {
		background-color: rgba(0, 0, 0, 0.2);
		border-color: rgba(255, 255, 255, 0.1);
	}

	.content-container {
		max-width: 80rem;
		margin-left: auto;
		margin-right: auto;
		padding-left: 1rem;
		padding-right: 1rem;
	}
	
	@media (min-width: 640px) {
		.content-container {
			padding-left: 1.5rem;
			padding-right: 1.5rem;
		}
	}
	
	@media (min-width: 1024px) {
		.content-container {
			padding-left: 2rem;
			padding-right: 2rem;
		}
	}

	/* Gradient backgrounds */
	.gradient-bg-primary {
		background: radial-gradient(circle, rgba(0, 112, 243, 0.6) 0%, rgba(255, 59, 48, 0.3) 50%, rgba(255, 255, 255, 0.9) 100%);
		opacity: 0.9;
	}
	
	.dark .gradient-bg-primary {
		background: radial-gradient(circle, rgba(0, 112, 243, 0.6) 0%, rgba(255, 59, 48, 0.3) 50%, rgba(18, 18, 18, 0.9) 100%);
	}
	
	.gradient-bg-accent {
		background: conic-gradient(from 0deg, rgba(255, 59, 48, 0.2), rgba(0, 112, 243, 0.1), rgba(255, 255, 255, 0));
		opacity: 0.3;
	}
	
	.dark .gradient-bg-accent {
		background: conic-gradient(from 0deg, rgba(255, 59, 48, 0.2), rgba(0, 112, 243, 0.1), rgba(18, 18, 18, 0));
	}
	
	/* Animation for gradients */
	@keyframes gradient {
		0% { background-position: 0% 50%; }
		50% { background-position: 100% 50%; }
		100% { background-position: 0% 50%; }
	}
	
	.animate-gradient-flow {
		animation: gradient 15s ease infinite;
	}
	
	/* Background opacity utilities */
	.bg-primary-10 {
		background-color: rgba(0, 112, 243, 0.1);
	}
	
	.bg-primary-20 {
		background-color: rgba(0, 112, 243, 0.2);
	}
	
	.bg-primary-30 {
		background-color: rgba(0, 112, 243, 0.3);
	}
	
	.bg-secondary-10 {
		background-color: rgba(45, 55, 72, 0.1);
	}
	
	.bg-secondary-20 {
		background-color: rgba(45, 55, 72, 0.2);
	}
	
	.bg-accent-10 {
		background-color: rgba(255, 59, 48, 0.1);
	}
	
	.bg-accent-20 {
		background-color: rgba(255, 59, 48, 0.2);
	}

	/* Hover states */
	.hover-bg-primary-10:hover {
		background-color: rgba(0, 112, 243, 0.1);
	}
	
	.hover-bg-primary-20:hover {
		background-color: rgba(0, 112, 243, 0.2);
	}
	
	.hover-bg-secondary-10:hover {
		background-color: rgba(45, 55, 72, 0.1);
	}
	
	.hover-bg-secondary-20:hover {
		background-color: rgba(45, 55, 72, 0.2);
	}
	
	.hover-bg-accent-10:hover {
		background-color: rgba(255, 59, 48, 0.1);
	}
	
	.hover-bg-accent-20:hover {
		background-color: rgba(255, 59, 48, 0.2);
	}
	
	/* Dark mode hover states */
	.dark .dark-hover-bg-primary-20:hover {
		background-color: rgba(0, 112, 243, 0.2);
	}
	
	.dark .dark-hover-bg-secondary-20:hover {
		background-color: rgba(45, 55, 72, 0.2);
	}
	
	.dark .dark-hover-bg-accent-20:hover {
		background-color: rgba(255, 59, 48, 0.2);
	}
	
	/* Dark mode background colors */
	.dark .dark-bg-primary-20 {
		background-color: rgba(0, 112, 243, 0.2);
	}
	
	.dark .dark-bg-accent-20 {
		background-color: rgba(255, 59, 48, 0.2);
	}

	/* Loud CTA button utility */
	.loud-cta {
		padding: 1.5rem 2.5rem;
		border-radius: 9999px;
		background-image: linear-gradient(to bottom right, #ff3b30, #0070f3, #2d3748);
		box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
		color: white;
		font-size: 1.5rem;
		font-weight: 800;
		letter-spacing: 0.05em;
		text-transform: uppercase;
		border: 4px solid rgba(255, 255, 255, 0.3);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
	}
	
	.loud-cta:hover {
		transform: scale(1.1);
		box-shadow: 0 8px 32px 0 rgba(61, 116, 184, 0.25);
	}
	
	.loud-cta:focus {
		outline: none;
		box-shadow: 0 0 0 4px rgba(255, 59, 48, 0.4);
	}
	
	.animate-bounce-soft {
		animation: bounce-soft 6s infinite;
	}
	
	@keyframes bounce-soft {
		0%, 20%, 50%, 80%, 100% { transform: translateY(0); }
		40% { transform: translateY(-10px); }
		60% { transform: translateY(-5px); }
	}
</style>
