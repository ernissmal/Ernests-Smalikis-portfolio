---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Ernests Smalikis - Software Engineer Portfolio">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Roboto+Mono:wght@400;500&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-bg-light dark:bg-bg-dark text-gray-900 dark:text-gray-100 min-h-screen font-sans antialiased">
		<div class="min-h-screen relative overflow-x-hidden">
			<div class="z-10 relative animate-fade-in">
				<slot />
			</div>

			<!-- Animated, Layered Gradient Background -->
			<div class="fixed inset-0 -z-10 pointer-events-none">
				<div class="absolute inset-0 bg-gradient-radial from-primary/60 via-accent/30 to-bg-light dark:to-bg-dark animate-gradient-flow opacity-90"></div>
				<div class="absolute inset-0 bg-gradient-conic from-accent/20 via-primary/10 to-bg-light dark:to-bg-dark opacity-30 mix-blend-lighten"></div>
				<div class="absolute inset-0 bg-gradient-top opacity-30 mix-blend-lighten"></div>
				<div class="absolute inset-0 bg-gradient-bottom opacity-20 mix-blend-multiply"></div>
				<div class="absolute inset-0 bg-grid-pattern opacity-[0.02] dark:opacity-[0.02]"></div>
			</div>

			<!-- Floating, Loud CTA Button -->
			<a href="/projects" class="fixed bottom-8 right-8 z-50 group">
				<button class="px-10 py-6 rounded-full bg-gradient-to-br from-accent via-primary to-secondary shadow-2xl text-white text-2xl font-extrabold tracking-wider uppercase border-4 border-white/30 hover:scale-110 hover:shadow-[0_8px_32px_0_rgba(61,116,184,0.25)] transition-all duration-300 animate-bounce-soft focus:outline-none focus:ring-4 focus:ring-accent/40">
					<span class="inline-flex items-center gap-4">
						<span class="drop-shadow-lg text-3xl">ðŸš€</span>
						<span>See My Projects</span>
					</span>
				</button>
			</a>
		</div>
	</body>
</html>

<style is:global>
	::selection {
		@apply text-primary-dark dark:text-primary-light;
	}
	
	html {
		@apply scroll-smooth;
	}

	body {
		@apply transition-colors duration-300;
	}

	/* Gradient text utility */
	.gradient-text {
		@apply bg-gradient-to-r from-primary via-accent to-primary bg-clip-text text-transparent animate-gradient-flow bg-[length:200%_auto];
	}

	/* Custom grid pattern */
	.bg-grid-pattern {
		background-size: 50px 50px;
		background-image: 
			linear-gradient(to right, rgba(99,102,241,0.1) 1px, transparent 1px),
			linear-gradient(to bottom, rgba(99,102,241,0.1) 1px, transparent 1px);
	}

	/* Custom scrollbar */
	::-webkit-scrollbar {
		@apply w-2;
	}

	::-webkit-scrollbar-track {
		@apply bg-bg-light dark:bg-bg-dark;
	}

	::-webkit-scrollbar-thumb {
		@apply bg-primary-20 hover:bg-primary-30 rounded-full transition-colors duration-200;
	}

	/* Smooth transitions for theme switching */
	* {
		@apply transition-colors duration-200;
	}

	/* Card and container styles */
	.glass-card {
		@apply backdrop-blur-md bg-white/30 dark:bg-black/20 border border-white/30 dark:border-white/10 rounded-2xl shadow-2xl;
	}

	.content-container {
		@apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8;
	}

	/* Loud CTA button utility */
	.loud-cta {
		@apply px-10 py-6 rounded-full bg-gradient-to-br from-accent via-primary to-secondary shadow-2xl text-white text-2xl font-extrabold tracking-wider uppercase border-4 border-white/30 hover:scale-110 hover:shadow-[0_8px_32px_0_rgba(61,116,184,0.25)] transition-all duration-300 animate-bounce-soft focus:outline-none focus:ring-4 focus:ring-accent/40;
	}
</style>
